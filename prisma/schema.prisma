generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String          @id @default(uuid())
  firstName        String
  lastName         String
  email            String          @unique
  password         String
  porfileImage     String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt()
  posts            Post[]
  sentRequests     FriendRequest[] @relation("initiators")
  recievedRequests FriendRequest[] @relation("recievers")
}

model FriendRequest {
  id          String @id @unique @default(uuid())
  recieverId  String
  reciever    User   @relation("recievers", fields: [recieverId], references: [id])
  initiatorId String
  initiator   User   @relation("initiators", fields: [initiatorId], references: [id])
}

model Post {
  id     String @id @unique @default(uuid())
  userId String
  user   User?  @relation(fields: [userId], references: [id])
  title  String
  post   String
  likes  Like[]
}

model Like {
  id     String @id @unique @default(uuid())
  postId String
  post   Post?  @relation(fields: [postId], references: [id])
}
